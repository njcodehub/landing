---
// filepath: /home/jestin/Documents/Dev/IDE/landing/src/pages/contact.astro
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <section class="py-16 flex justify-center items-center min-h-[60vh] bg-white dark:bg-dark">
    <form class="bg-white dark:bg-gray-900 p-8 rounded shadow-md w-full max-w-md space-y-4 border border-gray-200 dark:border-gray-800">
      <h1 class="text-2xl font-bold mb-4 text-center text-gray-900 dark:text-white">Contact</h1>
      <input type="text" name="name" placeholder="Your name" class="w-full border rounded px-3 py-2 dark:bg-gray-800 dark:border-gray-700 dark:text-white" required />
      <input type="email" name="email" placeholder="Your email" class="w-full border rounded px-3 py-2 dark:bg-gray-800 dark:border-gray-700 dark:text-white" required />
      <textarea name="message" placeholder="Your message" class="w-full border rounded px-3 py-2 dark:bg-gray-800 dark:border-gray-700 dark:text-white" rows="5" required></textarea>
      <button type="submit" class="w-full btn-primary">Send</button>
    </form>
  </section>
</Layout>