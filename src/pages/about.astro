<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Contact</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.4.1/dist/tailwind.min.css" rel="stylesheet">
  </head>
  <body class="bg-white min-h-screen flex items-center justify-center">
    <form class="bg-white p-8 rounded shadow-md w-full max-w-md space-y-4">
      <h1 class="text-2xl font-bold mb-4">Contact</h1>
      <input type="text" name="name" placeholder="Your name" class="w-full border rounded px-3 py-2" required />
      <input type="email" name="email" placeholder="Your email" class="w-full border rounded px-3 py-2" required />
      <textarea name="message" placeholder="Your message" class="w-full border rounded px-3 py-2" rows="5" required></textarea>
      <button type="submit" class="w-full btn-primary">Send</button>
    </form>
  </body>
</html>