---
import project1 from '~/assets/images/station_air_quality.jpg';
import project2 from '~/assets/images/station_air_quality.jpg';
import project3 from '~/assets/images/station_air_quality.jpg';

const cards = [
  {
    title: 'Projet 1',
    image: project1,
    description: 'Description du projet 1',
  },
  {
    title: 'Projet 2',
    image: project2,
    description: 'Description du projet 2',
  },
  {
    title: 'Projet 3',
    image: project3,
    description: 'Description du projet 3',
  },
];
---

<section class="grid grid-cols-1 md:grid-cols-3 gap-6 px-6 py-12">
  {cards.map(card => (
    <div class="relative group h-64 rounded-2xl overflow-hidden shadow-lg cursor-pointer">
      <img 
        src={card.image} 
        alt={card.title}
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
      />
      <div class="absolute inset-0 bg-black bg-opacity-60 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center text-white text-center px-4">
        <p class="text-lg font-semibold">{card.title} - {card.description}</p>
      </div>
    </div>
  ))}
</section>
